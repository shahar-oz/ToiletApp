<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            
             x:Class="ToiletApp.Views.LoginPageView"
    Title="Login"
    BackgroundColor="White">

    <VerticalStackLayout VerticalOptions="Center" Padding="30" Spacing="15">

        <Label Text="Welcome Back!" 
               FontSize="26" 
               FontAttributes="Bold" 
               TextColor="#1E3A8A" 
               HorizontalOptions="Center"/>

        <!-- Email Input -->
        <Label Text="Email" TextColor="#1E3A8A" FontSize="18"/>
        <Entry Placeholder="Enter your email" 
               BackgroundColor="#E0F2FE" 
               TextColor="#1E3A8A" 
               FontSize="16" 
               Text="{Binding Email}"/>

        <!-- Password Input -->
        <Label Text="Password" TextColor="#1E3A8A" FontSize="18"/>
        <Entry Placeholder="Enter your password" 
               IsPassword="True" 
               BackgroundColor="#E0F2FE" 
               TextColor="#1E3A8A" 
               FontSize="16" 
               Text="{Binding Password}"/>

        <!-- Login Button -->
        <Button Command="{Binding LoginCommand}"
                Text="Login"
                BackgroundColor="#1E3A8A"
                TextColor="White"
                CornerRadius="10"
                FontSize="16" 
                WidthRequest="200"
                HorizontalOptions="Center"/>

        <!-- Forgot Password? -->
        <Label Text="Forgot Password?" 
               TextColor="#1E3A8A" 
               FontSize="16" 
               HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}"/>
            </Label.GestureRecognizers>
        </Label>

        <!-- Register Navigation -->
        <Label Text="Don't have an account? Sign up here" 
               TextColor="#1E3A8A" 
               FontSize="16" 
               HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding RegisterCommand}"/>
            </Label.GestureRecognizers>
        </Label>

        <!-- Loading Indicator -->
        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                           Color="#1E3A8A" 
                           HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>
