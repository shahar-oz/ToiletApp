<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ToiletApp.Views.SystemView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:ToiletApp.Models"
    xmlns:viewModels="clr-namespace:ToiletApp.ViewModel"
    Title="SystemView">
    <RefreshView>
    <VerticalStackLayout>
        <Label Text="Select toilet status:"> </Label>
        <Picker Title="Select toilet status" ItemsSource="{Binding Statuses}" SelectedItem="{Binding SelectedStatus}" ItemDisplayBinding="{Binding Name}" />
        <Border HeightRequest="260">
            <CollectionView
            x:Name="ToiletsList"
            HeightRequest="200"
            ItemsSource="{Binding ToiletsCol}"
                SelectedItem="{Binding SelectedObject}"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:CurrentToiletInfo">
                        <Border>
                        <SwipeView Grid.Column="0" Margin="5,0">
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem
                                        Command="{Binding Source={x:Reference ToiletsList}, Path=BindingContext.DeclineToilet}"
                                        CommandParameter="{Binding .}"
                                        IconImageSource="declineicon.png"
                                        Text="Decline" />
                                </SwipeItems>
                            </SwipeView.LeftItems>

                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem
                                        Command="{Binding Source={x:Reference ToiletsList}, Path=BindingContext.ApproveToilet}"
                                        CommandParameter="{Binding .}"
                                        IconImageSource="checkmarkicon.png"
                                        Text="Approve" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                        <StackLayout>
                                <Label Text="{Binding Tlocation}"></Label>
                                <Label Text="{Binding Accessibility}"></Label>
                                <Label Text="{Binding Price}"></Label>
                                <Image Source="{Binding PhotoURL}"></Image>
                               
                            </StackLayout>
                    </SwipeView>

                        </Border>
                    </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        </Border>
        <StackLayout Margin="0,20,0,0" HorizontalOptions="Center">

            <Label
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Text="Register a new user!"
                TextColor="Blue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding RegisterCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
   
    </VerticalStackLayout>
    </RefreshView>
</ContentPage>